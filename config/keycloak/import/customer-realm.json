{
  "realm": "customer-service",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      {
        "name": "USER",
        "description": "Standard user role with read access"
      },
      {
        "name": "ADMIN",
        "description": "Administrator role with full access"
      }
    ]
  },
  "clients": [
    {
      "clientId": "customer-service-app",
      "name": "Customer Service Application",
      "description": "Backend service for customer management",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "fullScopeAllowed": true,
      "attributes": {
        "access.token.lifespan": "3600"
      }
    },
    {
      "clientId": "customer-service-cli",
      "name": "Customer Service CLI Client",
      "description": "CLI/Testing client for obtaining tokens",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "http://localhost:*"
      ],
      "webOrigins": [
        "*"
      ],
      "attributes": {
        "access.token.lifespan": "3600",
        "pkce.code.challenge.method": "S256"
      }
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "email": "admin@banking.com",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ADMIN",
        "USER"
      ]
    },
    {
      "username": "user",
      "enabled": true,
      "emailVerified": true,
      "email": "user@banking.com",
      "firstName": "Standard",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "user123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "USER"
      ]
    }
  ],
  "clientScopeMappings": {
    "customer-service-app": [
      {
        "client": "customer-service-app",
        "roles": [
          "USER",
          "ADMIN"
        ]
      }
    ]
  }
}
